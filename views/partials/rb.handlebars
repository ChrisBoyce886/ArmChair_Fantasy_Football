<table dataid = "players-list" id="airyards-table" class="w-full rounded-lg" data-sortable>
  <thead>
    <tr class="text-xs text-white rounded-lg subpixel-antialiased cursor-pointer">
      <th class="text-left data-header">Player</th>
      <th class="data-header">Team Name</th>
      <th class="data-header">Position</th>
      <th class="data-header">{{stat1}}</th>
      <th class="data-header">{{stat2}}</th>
      <th class="data-header">{{stat3}}</th>
      <th class="data-header">{{stat4}}</th>
      <th class="data-header">{{stat5}}</th>
      <th class="data-header">{{stat6}}</th>
      <th class="data-header">Select Player</th>
    </tr>
  </thead>
  <tbody class="striped">
    {{#each players}}
      <tr>
        <td class="text-left">{{this.name}}</td>
        <td class="text-center">{{this.team}}</td>
        <td class="text-center">{{this.position}}</td>
        <td class="text-center">{{this.rushingAttempts}}</td>
        <td class="text-center">{{this.rushingYards}}</td>
        <td class="text-center">{{this.rushingTouchdowns}}</td>
        <td class="text-center">{{this.receptions}}</td>
        <td class="text-center">{{this.receivingYards}}</td>
        <td class="text-center">{{this.receivingTouchdowns}}</td>
        <td class="text-center" >
          <button 
            class="add-btn"
            data-index={{@index}}
            data-name={{this.name}}
            data-team={{this.team}}
            data-position={{this.position}}
            data-stat1={{this.rushingAttempts}}
            data-stat2={{this.rushingYards}}
            data-stat3={{this.rushingTouchdowns}}
            data-stat4={{this.receptions}}
            data-stat5={{this.receivingYards}}
            data-stat6={{this.receivingTouchdowns}}
          >
            Add
          </button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>